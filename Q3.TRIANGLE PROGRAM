import java.util.*;
class triangle
{
	public static void main (String s1[])
	{
		int base,height;
		Scanner s = new Scanner(System.in);
		System.out.println("Enter the base:");
		base = s.nextInt();
		System.out.println("ENTER THE HEIGHT");
		height = s.nextInt();
		System.out.println("AREA OF  A TRIANGLE:-"+(0.5*base*height));
	}
}
